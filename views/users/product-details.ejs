    <script>
        function validateStock() {
            const qtyInput = document.getElementById('qty');
            const stockError = document.getElementById('stock-error');
            const maxQty = parseInt(qtyInput.max, 10);
            const currentQty = parseInt(qtyInput.value, 10);

            // Ensure min is less than max
            if (parseInt(qtyInput.min, 10) > maxQty) {
                qtyInput.min = '1';
            }

            // Validate quantity
            if (currentQty > maxQty) {
                stockError.style.display = 'block';
                return false; // Prevent form submission
            }

            stockError.style.display = 'none';
            return true; // Allow form submission
        }

        function decrementQty() {
            const qtyInput = document.getElementById('qty');
            const minQty = parseInt(qtyInput.min, 10);
            if (parseInt(qtyInput.value, 10) > minQty) {
                qtyInput.value = parseInt(qtyInput.value, 10) - 1;
            }
            validateStock();
        }

        function incrementQty() {
            const qtyInput = document.getElementById('qty');
            const maxQty = parseInt(qtyInput.max, 10);
            if (parseInt(qtyInput.value, 10) < maxQty) {
                qtyInput.value = parseInt(qtyInput.value, 10) + 1;
            }
            validateStock();
        }


        document.addEventListener('DOMContentLoaded', function () {
            let cropper;
            const carousel = document.getElementById('product_details_slider');

            // Initialize Cropper.js on the first image
            function initializeCropper(imageElement) {
                if (cropper) {
                    cropper.destroy(); // Destroy the previous cropper instance
                }
                cropper = new Cropper(imageElement, {
                    zoomable: true,
                    scalable: false,
                    viewMode: 1,
                    dragMode: 'move',
                    autoCropArea: 1,
                    background: false,
                    responsive: true,
                    toggleDragModeOnDblclick: false
                });
            }

            // Initialize cropper on the default (first) image
            const firstImage = document.querySelector('.carousel-item.active img');
            initializeCropper(firstImage);

            // Update cropper when the carousel slides to a new image
            $('#product_details_slider').on('slid.bs.carousel', function () {
                const activeImage = document.querySelector('.carousel-item.active img');
                initializeCropper(activeImage);
            });
        });
    </script>
